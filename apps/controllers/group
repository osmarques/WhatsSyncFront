def update_group_participants():

    url = f"{host}/group/participantsupdate?key={apikey}"
    payload = {'id': '','users': '','action': ''}
    files=[]
    headers = {}
    response = requests.request("POST", url, headers=headers, data=payload, files=files)
    print(response.text)

